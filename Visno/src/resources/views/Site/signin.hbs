
    <div class="signin-page">
        <div class="row">
            <div class="image">
                <img src="/img/sign.jpg">
            </div>
            <div class="signin">
                <div class="container">
                    <form method="POST" action="/auth/login">
                        <h1>Sign In</h1>
                        <hr>
                        {{#if message}}
                        <div display="none" class="alert alert-{{{alert}}}" role="alert">
                            {{{message}}}
                        </div>
                        {{/if}}
                        <label for="email"><b>Email</b></label>
                        <input id="email" type="text" placeholder="Enter Your Email..." name="email" required>
                        <label for="password"><b>Password</b></label>
                        <input id="password" type="password" placeholder="Enter Your Password..." name="password" required>
                        <div class="label-a">
                            <label>
                                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember Login
                            </label>
                            <a class="forgot">Forgot Password?</a>
                            <div class="clearfix">
                                <button type="submit" class="signupbtn">Sign In</button>
                            </div>
                        </div>
                    </form>
                    <div class="create-user">
                        <a href="/auth/signup">Create Account</a>
                    </div>
                </div>
            </div>
        </div>     
    </div>